use proconio::{input, fastout};

#[fastout]
fn main() {
    input! {
        n: usize,
        a: [usize; n],
    }
    let mut x = vec![0; n];
    let mut ans:i64 = 0;
    for i in 0..n {
        if i+a[i]<n {
            x[i+a[i]] += 1;
        }
        if i>=a[i] {
            ans += x[i-a[i]];
        }
    }
    println!("{}", ans);
}
